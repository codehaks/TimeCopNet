@page
@model TimeCop.Web.Areas.Admin.Pages.Holidays.CreateModel
@{
}

<h2>New Holiday</h2>
<hr />
<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Input.Note" class="form-label"></label>
        <input asp-for="Input.Note" class="form-control" />
        <span asp-validation-for="Input.Note" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Date" class="form-label"></label>
        <input asp-for="Input.Date" class="form-control" />
        <span asp-validation-for="Input.Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.CanOvertime" class="form-label"></label>
        <input type="checkbox" asp-for="Input.CanOvertime" class="form-check-input" />
        <span asp-validation-for="Input.CanOvertime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.OverTimeLimit" class="form-label"></label>
        <input asp-for="Input.OverTimeLimit" class="form-control" />
        <span asp-validation-for="Input.OverTimeLimit" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.OverTimeRate" class="form-label"></label>
        <input asp-for="Input.OverTimeRate" class="form-control" />
        <span asp-validation-for="Input.OverTimeRate" class="text-danger"></span>
    </div>


    <button class="btn btn-primary mb-5">Submit</button>
</form>