@page
@model TimeCop.Web.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["title"] = "Users";
}

<h1>Users</h1>
<hr />

<a class="btn btn-primary mb-3 mt-3" asp-page="./create" asp-area="admin">Add New</a>

<table class="table table-bordered">
    @foreach (var user in Model.UserList)
    {
        <tr>
            <td>@user.UserName</td>
            <td>
                <a asp-page="./edit" asp-area="admin" asp-route-userid="@user.Id" class="btn btn-primary">Edit</a>
            </td>
        </tr>
    }

</table>